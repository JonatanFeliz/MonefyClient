@model MonefyClient.ViewModels.AccountViewModel
@{
    ViewData["Title"] = "Create Account - Monefy";
}

<section id="create_account">
    <div class="container w-50" style="margin-top: 200px;">

        <form asp-action="Create" asp-controller="Account">
            <h2 class="text-center mb-3">Create Account</h2>

            <div class="row">
                <div class="col-12 text-center">
                    <label asp-for="Name" class="form-label"></label>
                    <input type="text" asp-for="Name" placeholder="Account" class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <label asp-for="Currency" class="form-label"></label>
                    <select asp-for="Currency">
                        <option value="Category">currency</option>
                        <option value="Euro">Euro</option>
                    </select>
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12 text-center">
                    <input type="submit" class="btn btn-success" />
                </div>
            </div>
        </form>

    </div>
</section>
