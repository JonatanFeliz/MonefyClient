@*@model List<AccountViewModel>*@
@{
    ViewData["Title"] = "Accounts - Monefy";
}

<section id="accounts">
    <table class="table table-primary text-center mt-3">
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Currency</th>
            <th scope="col">Balance</th>
            <th scope="col">Actions</th>
        </tr>
        @foreach (var account in ViewBag.Accounts)
        {
            <tr>
                <td>@account.Name</td>
                <td>@account.Currency</td>
                <td>@account.Balance</td>
                <td>
                    <a class="btn btn-warning" asp-action="Edit" asp-controller="Account" asp-route-id="@account.Id">
                        Update
                    </a>

                    <a class="btn btn-danger" asp-action="Delete" asp-controller="Account" asp-route-id="@account.Id">
                        Delete
                    </a>
                </td>
            </tr>
        }
    </table>
</section>
