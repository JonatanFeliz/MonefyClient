@{
    ViewData["Title"] = "Home Page";
}
@ViewBag.Token
<section id="home">
    <div>
        <select class="mt-3 ms-3">
            <option value="euro">€</option>
        </select>
    </div>
    <div class="container pt-4" style="margin-top: 200px;">
        <div class="row mb-4">
            <div class="col-12 text-center">
                <span>27/02/2023</span>
            </div>
        </div>
        <div class="row">
            <div class="col-12 text-center">
                <span class="badge rounded-pill bg-dark p-5 fs-3">0 €</span>
            </div>
        </div>
        <div class="row mt-4">
            <div class="col-12 text-center">
                <a class="btn btn-danger" asp-area="" asp-controller="Expense" asp-action="Create">
                    <span class="badge rounded-pill fs-5">Expense</span>
                </a>
                <a class="btn btn-success ms-4" asp-area="" asp-controller="Income" asp-action="Create">
                    <span class="badge rounded-pill fs-5">Income</span>
                </a>
            </div>
        </div>
    </div>
</section>
