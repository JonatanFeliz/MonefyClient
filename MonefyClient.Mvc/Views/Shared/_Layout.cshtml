<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MonefyClient.Mvc.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
            <nav id="sidebarMenu" class="collapse d-lg-block sidebar collapse bg-dark">
                <div class="position-sticky ">
                    <div class="list-group list-group-flush mx-3 mt-4">
                    <a class="list-group-item list-group-item-action py-2 ripple bg-dark" asp-area="" asp-controller="Home" asp-action="Index">
                        <span class="text-white">Home</span>
                    </a>
                    <a class="list-group-item list-group-item-action py-2 ripple bg-dark" asp-area="" asp-controller="Account" asp-action="Index">
                        <span class="text-white">Account</span>
                    </a>
                    <a class="list-group-item list-group-item-action py-2 ripple bg-dark" asp-area="" asp-controller="Income" asp-action="Index">
                        <span class="text-white">Incomes</span>
                    </a>
                    <a class="list-group-item list-group-item-action py-2 ripple bg-dark" asp-area="" asp-controller="Expense" asp-action="Index">
                        <span class="text-white">Expenses</span>
                    </a>
                    <a class="list-group-item list-group-item-action py-2 ripple bg-dark" asp-area="" asp-controller="Category" asp-action="Index">
                        <span class="text-white">Categories</span>
                    </a>
                    </div>
                </div>
            </nav>
        
            <nav id="main-navbar" class="navbar navbar-expand-lg navbar-light bg-dark fixed-top">
                <div class="container-fluid">
                    <button
                    class="navbar-toggler"
                    type="button"
                    data-mdb-toggle="collapse"
                    data-mdb-target="#sidebarMenu"
                    aria-controls="sidebarMenu"
                    aria-expanded="false"
                    aria-label="Toggle navigation"
                    >
                    <i class="fas fa-bars"></i>
                    </button>
            
                    <a class="navbar-brand ms-2" href="#">
                        <span class="h3" style="color: #76BC97;">Monefy</span>
                    </a>
                    
                    <button class="btn me-3 text-white btn-danger">
                    <a class="text-decoration-none text-white" asp-area="" asp-controller="User" asp-action="Login">
                            Log Out
                    </a>
                    </button>
                </div>
            </nav>
        </header>

        <div class="container">
        <main role="main" style="margin-top: 58px;">
            @RenderBody()
            </main>
        </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
