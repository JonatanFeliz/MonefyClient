@{
    ViewData["Title"] = "Login - Monefy";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<section id="login">
    <div class="container d-flex justify-content-center pt-5">
        <form class="w-50 pt-5">
            <div class=" px-5 py-4 shadow-lg p-3 mb-5 rounded">
                <h2 class="text-center mb-3">Login</h2>

                <div class="mb-3">
                    <label for="email" class="form-label">Email:</label>
                    <input type="email" name="email" id="email" class="form-control">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Password:</label>
                    <input type="password" name="password" id="password" class="form-control">
                </div>

                <div class="d-grid gap-2">
                    <button type="submit" class="btn btn-primary">Entry</button>
                </div>

                <div class="text-center mt-3">No have account? <a asp-area="" asp-controller="User" asp-action="Register">Sign Up</a></div>

            </div>
        </form>
    </div>
</section>
