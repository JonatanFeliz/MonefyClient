@using MonefyClient.ViewModels.InputViewModels;
@model InputUserViewModel
@{
    ViewData["Title"] = "Register - Monefy";
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<section id="register">
    <div class="container d-flex justify-content-center pt-5">
        <div class="w-50 pt-5">
            <div class=" px-5 py-4 shadow-lg p-3 mb-5 rounded">


                <form asp-action="Register" asp-controller="User">
                    <h2 class="text-center mb-3">Sign Up</h2>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input type="text" asp-for="Name" placeholder="pepe" class="form-control">

                        <small class="text-danger">@Html.ValidationMessageFor(model=>model.Name)</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label"></label>
                        <input type="email" asp-for="Email" placeholder="j@gmail.com" class="form-control">

                        <small class="text-danger">@Html.ValidationMessageFor(model=>model.Email)</small>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Password" class="form-label"></label>
                        <input type="password" asp-for="Password" placeholder="***********" class="form-control">

                        <small class="text-danger">@Html.ValidationMessageFor(model=>model.Password)</small>
                    </div>

                    <div class="d-grid gap-2">
                        <input type="submit" class="btn btn-primary" />
                    </div>

                    <div class="text-center mt-3"><a asp-area="" asp-controller="User" asp-action="Login">Login</a></div>

                    <p id="message" class="text-center mt-2 text-danger">@ViewBag.Message</p>
                </form>

            </div>

        </div>
    </div>
</section>