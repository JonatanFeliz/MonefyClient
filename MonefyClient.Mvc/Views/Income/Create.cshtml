@model MonefyClient.ViewModels.IncomeViewModel
@{
    ViewData["Title"] = "Incomes - Monefy";
}

<section id="create_income">
    <div class="container w-50" style="margin-top: 200px;">
        <form asp-action="Create" asp-controller="Income">
            <h2 class="text-center mb-3">Create Income</h2>

            <div class="row">
                <div class="col-12 text-center">
                    <label asp-for="Description" class="form-label"></label>
                    <input type="text" asp-for="Description" placeholder="Description" class="form-control">
                </div>
            </div>
            <div class="row mt-3">
                <div class="col-12 text-center">
                    <label asp-for="Value" class="form-label"></label>
                    <input type="number" asp-for="Value" placeholder="0" class="form-control">
                </div>
            </div>

            <div class="row mt-3">
                <div class="col-12 text-center">
                    <label asp-for="Date" class="form-label"></label>
                    <input type="date" asp-for="Date" class="form-control">
                </div>
            </div>

            <div class="row mt-4">
                <div class="col-12 text-center">
                    <input type="submit" class="btn btn-success" />
                </div>
            </div>
        </form>
    </div>
</section>
